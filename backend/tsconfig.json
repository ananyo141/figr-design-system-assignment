{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "es2017",
      "esnext.asynciterable"
    ],
    "typeRoots": [
      "./src/types",
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "build",
    "allowJs": true,
    "checkJs": false,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "baseUrl": "src",
    "strict": false,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@constants/*": [
        "constants/*"
      ],
      "@controllers/*": [
        "controllers/*"
      ],
      "@database/*": [
        "database/*"
      ],
      "@errors/*": [
        "errors/*"
      ],
      "@interfaces/*": [
        "interfaces/*"
      ],
      "@middlewares/*": [
        "middlewares/*"
      ],
      "@models/*": [
        "models/*"
      ],
      "@routes/*": [
        "routes/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@schema/*": [
        "schema/*"
      ],
      "@entity/*": [
        "entities/*"
      ],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json",
    ".env",
  ],
  "exclude": [
    "node_modules",
    "src/http",
    "src/logs",
    "src/tests"
  ]
}